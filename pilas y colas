}


void agregarPila(Nodo *&pila, int n){
   Nodo *nuevo_nodo = new Nodo();
   nuevo_nodo->dato = n;
   nuevo_nodo->siguiente = pila;
   pila = nuevo_nodo;

    cout<<"\tEl dato "<<n<<" ha sido agregado correctamente a la Pila";

}

void sacarPila(Nodo *&pila, int &n){
    Nodo *aux = pila;
    n = aux->dato;
    pila = aux->siguiente;

    delete aux;
}


